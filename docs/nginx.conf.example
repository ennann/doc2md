# /etc/nginx/sites-available/doc2md.org

# ==========================================
# 1. Frontend: doc2md.org (Next.js)
# ==========================================

# HTTP Redirect
server {
    listen 80;
    listen [::]:80;
    server_name doc2md.org www.doc2md.org;
    return 301 https://doc2md.org$request_uri;
}

# HTTPS
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name doc2md.org www.doc2md.org;

    # SSL Certificates
    ssl_certificate     /root/acme/doc2md.org/fullchain.pem;
    ssl_certificate_key /root/acme/doc2md.org/key.pem;

    # TLS Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Proxy to Next.js (Port 3000)
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# ==========================================
# 2. API Service: api.doc2md.org (FastAPI)
# ==========================================

# HTTP Redirect
server {
    listen 80;
    listen [::]:80;
    server_name api.doc2md.org;
    return 301 https://$host$request_uri;
}

# HTTPS
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name api.doc2md.org;

    # SSL Certificates
    ssl_certificate     /root/acme/doc2md.org/fullchain.pem;
    ssl_certificate_key /root/acme/doc2md.org/key.pem;

    # TLS Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # Cloudflare compatibility (if applicable)
    real_ip_header CF-Connecting-IP;
    set_real_ip_from 0.0.0.0/0;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Increase upload limits (Word/PDF files need larger body size)
    client_max_body_size 50M;

    # Proxy to FastAPI (Port 8200)
    location / {
        proxy_pass         http://127.0.0.1:8200;
        proxy_http_version 1.1;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;

        # Websocket support
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection "upgrade";
    }
}

# ==========================================
# 3. Deploy Webhook: deploy.doc2md.org (Node.js)
# ==========================================

# HTTP Redirect
server {
    listen 80;
    listen [::]:80;
    server_name deploy.doc2md.org;
    return 301 https://$host$request_uri;
}

# HTTPS
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name deploy.doc2md.org;

    # SSL Certificates
    ssl_certificate     /root/acme/doc2md.org/fullchain.pem;
    ssl_certificate_key /root/acme/doc2md.org/key.pem;

    # TLS Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # Proxy to Deploy Webhook (Port 8020)
    location / {
        proxy_pass http://127.0.0.1:8020;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
